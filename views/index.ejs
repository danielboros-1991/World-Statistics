        <script type="text/javascript">

            google.charts.load("current", {
                "packages": ["geochart"] 
            });

            google.charts.setOnLoadCallback(drawRegionsMap);

            function drawRegionsMap() {
                var data = google.visualization.arrayToDataTable([
                    ["Country", "GDP"],
                    ["Argentina", 11652.6],
                    ["Austria", 51512.9],
                    ["Brazil", 8920.8],
                    ["Bulgaria", 9272.6],
                    ["Canada", 46124.7],
                    ["Croatia", 14869.1],
                    ["Czechia", 22973.1],
                    ["Finland", 49960.2],
                    ["Germany", 48195.6],
                    ["Japan", 39286.7],
                    ["Hungary", 15938.8],
                    ["Italy", 34318.4],
                    ["Netherlands", 52978.4],
                    ["Norway", 81807.2],
                    ["Singapore", 64581.9],
                    ["Spain", 30523.9],
                    ["Sweden", 54112.0],
                    ["Thailand", 7273.6],
                    ["United Kingdom", 42491.4],
                    ["United States", 62641.0]
                ]);

                var options = {
                    
                    colorAxis: {                      
                        colors: ['#F0E68C', '#BDB76B', '#a6d96a', '#66bd63', '#1a9850', '#006d2c']
                    },
                    backgroundColor: '#81d4fa',
                    datalessRegionColor: '#999',
                    defaultColor: '#f5f5f5',
                };

                var chart = new google.visualization.GeoChart(document.getElementById("map_1"));
                chart.draw(data, options);

                // MAP 2

                var data = google.visualization.arrayToDataTable([
                    ["Country", "GDP Growth"],
                    ["Argentina", -3.5],
                    ["Austria", 2.2],
                    ["Brazil", 0.3],
                    ["Bulgaria", 3.8],
                    ["Canada", 0.5],
                    ["Croatia", 3.5],
                    ["Czechia", 2.6],
                    ["Finland", 2.1],
                    ["Germany", 1.1],
                    ["Japan", 1.0],
                    ["Hungary", 5.1],
                    ["Italy", 1.0],
                    ["Netherlands", 2.1],
                    ["Norway", 0.7],
                    ["Singapore", 2.7],
                    ["Spain", 2.3],
                    ["Sweden", 1.1],
                    ["Thailand", 3.8],
                    ["United Kingdom", 0.7],
                    ["United States", 2.2]
                ]);

                var options = {
                    
                    colorAxis: {                      
                        colors: ['#F0E68C', '#BDB76B', '#a6d96a', '#66bd63', '#1a9850', '#006d2c']
                    },
                    backgroundColor: '#81d4fa',
                    datalessRegionColor: '#999',
                    defaultColor: '#f5f5f5',
                };

                var chart = new google.visualization.GeoChart(document.getElementById("map_2"));
                chart.draw(data, options);
            };

            var filterButton = document.querySelector("#filterButton");

            filterButton.addEventListener("change", function(){
                if(this.checked){
                    document.querySelector(".filter__choices").style.display = "flex";
                }
                else{
                    document.querySelector(".filter__choices").style.display = "none"; 
                }
                
            })
            
            var gdpCapita = document.querySelector("#gdpCapita");
            var gdpGrowth = document.querySelector("#gdpGrowth");

            gdpCapita.removeAttribute("href");
            gdpGrowth.removeAttribute("href");

            gdpGrowth.addEventListener("click", function(){
                for(i=0; i<document.querySelectorAll(".entry__map").length;i++){
                    document.querySelectorAll(".entry__map")[i].style.display = "none";
                }
                
                document.querySelector("#map_2").style.display = "block";
                
            })
            gdpCapita.addEventListener("click", function(){
                for(i=0; i<document.querySelectorAll(".entry__map").length;i++){
                    document.querySelectorAll(".entry__map")[i].style.display = "none";
                }
                
                document.querySelector("#map_1").style.display = "block";
            })

            // REGION

            var regionButton = document.querySelector("#regionButton");

